<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.miguelsanchez.newComponentsControllers.NewRotor">
    <content>
        <GridPane vgap="15">
            <RadioButton text="Special name" GridPane.columnIndex="0" GridPane.rowIndex="0" fx:id="RBSpecialName" onAction="#handleRBSpecialName">
                <tooltip>
                    <Tooltip text="Button Up: add a name for the rotor; Button Down: rotor name will be assigned automatically (1,2,3,4,...)"/>
                </tooltip>
            </RadioButton>
            <TextField promptText="Write here the name of the rotor" GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="TFName" disable="true"/>
            <Label text="Wiring of the rotor: " GridPane.columnIndex="0" GridPane.rowIndex="1" fx:id="LWiring"/>
            <TextArea promptText="type here the configuration for the wiring of the rotor. For doing so you must write the resulting letter in order starting from the A position (All the letters that are generated by a lap (for example B/D/O/L); another way is by typing the difference between the output and the input (for example 1/-2/0/2) The different numbers or letters must be defined between slashes"
                      wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="TAWiring"/>
            <RadioButton text="Numbers" GridPane.columnIndex="0" GridPane.rowIndex="2" fx:id="RBNumbers">
                <tooltip>
                    <Tooltip text="Button Up: introduced the wiring as numbers; Button Down: introduced the wiring as letters"/>
                </tooltip>
            </RadioButton>
            <Button text="Random Configuration" GridPane.columnIndex="0" GridPane.rowIndex="3" fx:id="BRandomConfiguration"/>
            <RadioButton text="Show the configuration as letters" GridPane.columnIndex="0" GridPane.rowIndex="4" fx:id="RBConfigurationAsLetters"/>
            <RadioButton text="Active Rotor" GridPane.columnIndex="0" GridPane.rowIndex="5" fx:id="RBActiveRotor">
                <tooltip>
                    <Tooltip text="Button Up: the rotor is one of the operating in the machine; Button Down: the rotor is one of the extras on the machine"/>
                </tooltip>
            </RadioButton>
            <RadioButton text="Configure later" GridPane.columnIndex="0" GridPane.rowIndex="6" fx:id="RBConfigureLater" onAction="#handleRBConfigureLater">
                <tooltip>
                    <Tooltip text="Button Up: configure the rotor later; Button Down: configure the rotor now"/>
                </tooltip>
            </RadioButton>
        </GridPane>
    </content>
</DialogPane>